<?xml version='1.0' encoding='utf-8'?>
<widget id="dev.jakobg.addictionfreevideo" version="0.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name short="AF-Video">Addiction Free Video</name>
    <description>
        A Youtube Player that removes addictive elements
    </description>
    <author email="afv@jakobg.dev" href="https://www.jakobg.dev">
        Jakob Gaiswinkler
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="res/icon/icon.png" />
        <preference name="AndroidLaunchMode" value="singleInstance" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon src="res/icon/icon.png" />
    </platform>
    <universal-links>
        <host name="*.youtube.com" scheme="https"/>
        <host name="youtube.com" scheme="https"/>
        <host name="youtu.be" scheme="https"/>
        <host name="*.youtu.be" scheme="https"/>
    </universal-links>
</widget>
